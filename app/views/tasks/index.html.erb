<h1>My tasks</h1>
  <ul>
    <% @tasks.each do |task| %>
      <li><h2><%= link_to task.title, task_path(task.id)%></h2>
      <p><%= link_to "Delete task", delete_task_path(task.id), method: :delete, data: { confirm: "Are you sure?" } %></li></p>
    <% end %>
  </ul>
<br>
<br>
<%= link_to "Add a new task", tasks_new_path %>
